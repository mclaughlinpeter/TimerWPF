<Window x:Class="TimerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimerWPF"
        mc:Ignorable="d"
        Title="Timer" Height="150" Width="150" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical">
        <Label x:Name="lbl_Timer" Margin="0, 4, 0, 0" Content="00:00:00" BorderBrush="Black" BorderThickness="1" Height="40" Width="90" FontSize="20" />
        <StackPanel Margin="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btn_Start" Margin="2" Width="45" Content="Start" Click="btn_Start_Click" />
            <Button x:Name="btn_Stop" Margin="2" Width="45" Content="Stop" Click="btn_Stop_Click" />
        </StackPanel>
        <StackPanel Margin="4, 0, 4, 4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btn_Reset" Margin="2" Padding="2" Width="45" Content="Reset" Click="btn_Reset_Click" />
            <Button x:Name="btn_Nudge" Margin="2" Padding="2" Width="45" Content="Nudge" Click="btn_Nudge_Click" />
        </StackPanel>
    </StackPanel>
</Window>
